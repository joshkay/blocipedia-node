<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
      <% include ../static/partials/navbar.ejs %>

      <main class="container">

        <% include ../static/partials/messages.ejs %>
        
        <h1>Sign up</h1>

        <div class="row">
          <div class="col-md-8">
            <form method="POST" action="/user/create">
              <div class="form-group">
                <label>Username:</label>
                <input type="text" name="username" aria-describedby="usernameHelp" placeholder="Enter Username" class="form-control" 
                  value="<%= messages.form ? messages.form[0].username : '' %>" />
                <small class="text-muted" id="usernameHelp">username must not contain any spaces</small>
              </div>
              <div class="form-group">
                <label>Email:</label>
                <input type="email" name="email" aria-describedby="emailHelp" placeholder="Enter Email" class="form-control"
                  value="<%= messages.form ? messages.form[0].email : '' %>" />
                <small class="text-muted" id="emailHelp">email address must be a valid address</small>
              </div>
              <div class="form-group">
                <label>Password:</label>
                <input type="password" name="password" aria-describedby="passwordHelp" placeholder="Enter Password" class="form-control"
                  value="<%= messages.form ? messages.form[0].password : '' %>" />
                <small class="text-muted" id="passwordHelp">password must match confirmation below</small>
              </div>
              <div class="form-group">
                <label>Password:</label>
                <input type="password" name="passwordConfirmation" placeholder="Enter Password confirmation" class="form-control"
                  value="<%= messages.form ? messages.form[0].passwordConfirmation : '' %>" />
              </div>
              <br/>
              <input type="submit" value="Sign Up" class="btn btn-primary"/>
            </form>
          </div>
        </div>
      </main>
      <!-- /.container -->

      <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>