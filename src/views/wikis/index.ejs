<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <% if (user && user.isStandard()) { %>
        <% include ../users/payment/upgrade.ejs %>
      <% } %>

      <% if (userWikis) { %>
        <h1>Your Wikis</h1>

        <hr>

        <ul class="list-unstyled">
          <% userWikis.forEach((wiki) => { %>
            <li>
              <a href="/wiki/<%= wiki.slug %> %>">
                <%= wiki.title %>
              </a>
            </li>
          <% }) %>
        </ul>        
      <% } %>

      <% if (publicWikis) { %>
        <h1>Wikis</h1>

        <hr>

        <ul class="list-unstyled">
          <% publicWikis.forEach((wiki) => { %>
            <li>
              <a href="/wiki/<%= wiki.slug %> %>">
                <%= wiki.title %>
              </a>
            </li>
          <% }) %>
        </ul>        
      <% } %>

      <% if (user) { %>
        <a href="/wiki/new" class="btn btn-primary btn-lg">New Wiki</a>
      <% } %>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>